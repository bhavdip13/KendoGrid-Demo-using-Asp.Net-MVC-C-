                                $('#dvLoader').hide();
                            }
                        });
                       
                    }
                },
                serverPaging: true,
                schema: {
                    data: "data",
                    total: "Total",
                    model: {
                        fields: {
                            PID: { type: "string" },
                            CreationDate: { type: "string" },
                            Name: { type: "string" },
