                        }
                    },
                    {
                        field: "Description",
                        width: "150px",
                        title: "Description",
                        attributes: {
                            class: "Description"
                        },
                        filterable: {
                            cell: {
                                template: function (e) {
                                    e.element.addClass("k-textbox k-FullWidth")
                                },
                                operator: "contains",
                                showOperators: false,
                            }
                        }
                    },
                    {
                        field: "Price",
                        width: "150px",
                        title: "Price",
                        attributes: {
                            class: "Price"
                        },
                        filterable: {
                            cell: {
                                template: function (e) {
                                    e.element.addClass("k-textbox k-FullWidth")
                                },
                                operator: "contains",
                                showOperators: false,
                            }
                        }
                    },
                    {
                        width: "150px",
                        title: "Action",
                        template: function (dataItem) {
                            return '<input class="btn btn-info" type="button" value="Edit" onclick=EditData(this)>  <input class="btn btn-danger" type="button" value="Delete" onclick=deleteData(this)>';
